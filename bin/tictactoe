#!/usr/bin/env ruby

require_relative '../config/environment'

def play_game
  puts "Welcome to Tic Tac Toe!"
  puts "Which game mod would you like to play today?:
  0 - AI vs. AI 
  1 - You vs. AI
  2 - You vs. a friend!"

  mode = gets.strip

  if mode == "1"
    puts "Do you want to go first? [y/ n]"
    if gets.strip == "y"
      Game.new(Players::Human.new("X"), Players::Computer.new("O"), board = Board.new).play
    else   Game.new(Players::Computer.new("X"), Players::Human.new("O"), board = Board.new).play
    end

  elsif mode == "0"
    Game.new(Players::Computer.new("X"), Players::Computer.new("O"), board = Board.new).play

  elsif mode == "2"
    Game.new(Players::Human.new("X"), Players::Human.new("O"), board = Board.new).play
  end
  puts "Would like to play again? [y/ n]"

end

play_game until gets.strip == "n"
